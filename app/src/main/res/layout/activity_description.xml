<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/main_activity_alpha">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/MenuButton_Role"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center"
        android:background="#80000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/roleSpinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:background="@drawable/description_border"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/imageRole"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@android:color/transparent"
                android:contentDescription="A Picture"/>

            <Spinner
                android:id="@+id/typeSpinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/description_border"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

    <Button
    android:id="@+id/returnButton"
    android:layout_marginTop="50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:text="@string/GenericButton_Return"/>

</LinearLayout>