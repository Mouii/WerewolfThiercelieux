<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_activity_alpha">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fcec03"
        android:background="#80000000"
        android:padding="10dp"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:text="@string/title_menu"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal|center_vertical">

        <Button
            android:id="@+id/selectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MenuButton_StartGame"/>

        <Button
            android:id="@+id/roleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MenuButton_Role"/>

        <Button
            android:id="@+id/faqButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MenuButton_FAQ"/>

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MenuButton_Exit"/>

    </LinearLayout>

</LinearLayout>